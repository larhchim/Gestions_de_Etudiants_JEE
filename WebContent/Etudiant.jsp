<h1>Liste des Etudiants</h1>

	<table>
	<thead>
		<tr>
		  <th>CIN</th>
		  <th>Nom</th>
		  <th>Prenom</th>
		  <th>Action</th>
		</tr>
		
		</thead>
		
		<tbody>
		
		  <% ArrayList<GestionEtudiants> a=(ArrayList<GestionEtudiants>)request.getAttribute("eleves");
		  for(int i=0;i<a.size();i++){
			
		  %>
		<tr>
		
		  <td>
		  <%
		  out.println(a.get(i).getCin());
		  %>
		  </td>
		  
		   <td>
		  <%
		  out.println(a.get(i).getNom());
		  %>
		  </td>
		  
		   <td>
		  <%
		  out.println(a.get(i).getPrenom());
		  %>
		  </td>
		  
